<?xml version="1.0" encoding="UTF-8"?><project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>RunJasperReports</groupId>
  <artifactId>RunJasperReports</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <description>RunJasperReports allow an easy JasperReports documents
		deployemnt</description>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>src</directory>
        <includes>
          <include>**/*.dtd</include>
          <include>**/*.properties</include>
          <include>**/*.GIF</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>./lib</directory>
              <includes>
                <include>**/*.jar</include>
              </includes>
              <followSymlinks>false</followSymlinks>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <tasks>
                <property value="." name="rjr.base.dir" />
                <property value="${rjr.base.dir}/src" name="rjr.src.dir" />
                <property value="${rjr.base.dir}/target" name="rjr.build.dir" />
                <property value="${rjr.build.dir}/RunJasperReports" name="rjr.export.dir" />
                <mkdir dir="${rjr.export.dir}" />
                <mkdir dir="${rjr.export.dir}/lib" />
              </tasks>
              <outputDirectory>${project.build.directory}/RunJasperReports/lib</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <property value="." name="rjr.base.dir" />
                <property value="${rjr.base.dir}/src" name="rjr.src.dir" />
                <property value="${rjr.base.dir}/target" name="rjr.build.dir" />
                <property value="${rjr.build.dir}/RunJasperReports" name="rjr.export.dir" />
                <echo>Deploy the RunJasperReports Project</echo>
                <copy todir="${rjr.export.dir}/lib">
                  <fileset dir="${rjr.build.dir}/">
                    <include name="*.jar" />
                  </fileset>
                </copy>
                <echo>Create the config directory</echo>
                <mkdir dir="${rjr.export.dir}/config" />
                <copy todir="${rjr.export.dir}/config">
                  <fileset dir="${rjr.base.dir}/resources/config">
                    <include name="*.xml" />
                  </fileset>
                </copy>
                <echo>Copy bat files for windows</echo>
                <mkdir dir="${rjr.export.dir}/bin" />
                <copy todir="${rjr.export.dir}/">
                  <fileset dir="${rjr.base.dir}/resources/windows">
                    <include name="*.bat" />
                  </fileset>
                </copy>
                <copy todir="${rjr.export.dir}/bin">
                  <fileset dir="${rjr.base.dir}/resources/windows/bin">
                    <include name="*.bat" />
                  </fileset>
                </copy>
                <echo>Copy sh files for linux</echo>
                <copy todir="${rjr.export.dir}/">
                  <fileset dir="${rjr.base.dir}/resources/linux">
                    <include name="*.sh" />
                  </fileset>
                </copy>
                <copy todir="${rjr.export.dir}/bin">
                  <fileset dir="${rjr.base.dir}/resources/linux/bin">
                    <include name="*.sh" />
                  </fileset>
                </copy>
                <mkdir dir="${rjr.export.dir}/templates" />
                <mkdir dir="${rjr.export.dir}/reports" />
                <echo>Create an archive for windows</echo>
                <zip destfile="${rjr.build.dir}/RunJasperReports.zip" basedir="${rjr.export.dir}" />
                <echo>Create an archive for linux</echo>
                <tar tarfile="${rjr.build.dir}/RunJasperReports.tar" basedir="${rjr.export.dir}" />
                <gzip zipfile="${rjr.build.dir}/RunJasperReports.tar.gz" src="${rjr.build.dir}/RunJasperReports.tar" />
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
