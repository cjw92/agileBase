Pour configurer RunJasperReports vous devez éditer un ficher du type
C:\RunJasperReports\config\reports_direction.xml

La configuration :
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<jobsReports xmlns="http://www.gtwm.com/jasperexecute/runJasperReports">
    <name>{indiquer le nom du job}</name>
    <emailSubject>{inidiquer le sujet du mail qui fera suite à l'exécution du job}</emailSubject>
    <emailFrom>{adresse email de l'expéditeur}</emailFrom>
    <emailToList>{adresse email des destinataires séparés par des virgules}</emailToList>
    <emailTemplate>
        <name>{nom du modèle du mail}</name>
        <template>
		{contenu du mail}
		</template>
    </emailTemplate>
	<!-- définition des sources de données -->
    <Sources>
        <source>
            <name>{Nom de la source de données}</name>
            <type>{Type de la source de données : JDBC|JAVABEANS. Seul JDBC est actuellement supporté}</type>
            <dbhostname>{serveur de la basse de données}</dbhostname>
            <dbname>{nom de la base de données}</dbname>
            <dbPort>{port d'écoute du serveur de données}</dbPort>
            <dbuser>{utilisateur de la base de données}</dbuser>
            <dbpassword>{Mot de passe de la base de données}</dbpassword>
            <dbprovider>{fournisseur de la base de données : MYSQL|ORACLE|}</dbprovider>
        </source>
		<!-- vous pouver déclarer plus d'une source -->
    </Sources>
	<!-- description des rapports -->
    <Reports>
       	<Report>
            <outputName>{nom du fichier produit}</outputName>
            <jrxmlFile>{chemin fichier JRXML}</jrxmlFile>
            <outputFormat>{format de sortie : PDF|JXSL|}</outputFormat>
            <source>{Nom de la source à utiliser}</source>
			<!-- gestion des paramètres -->
            <parameters>
                <Parameter>
                    <name>{nom du paramètre}</name>
                    <type>{type du paramètre}</type>
                    <value>{valeur du paramètre}</value>
                </Parameter>
				<!-- répéter autant de fois que nécessaire la balise Parameter -->
            </parameters>
        </Report>
		<!-- répéter autant de fois que nécessaire la balise Report -->
    </Reports>
	<!-- gestion du serveur smtp -->
    <mailSmtp>
        <serverSmtpName>{Nom du serveur}</serverSmtpName>
        <hostname>{adresse du serveur}</hostname>
        <port>{port smtp}</port>
		<login>{login}</login>
        <password>{mot de passe}</password>
    </mailSmtp>
    <outputFolder>{Répertoire de sortie}</outputFolder>
</jobsReports>
