<?xml version="1.0" encoding="UTF-8"?>

<project basedir="." default="jar" name="runJasperReports">
	<!-- java components -->
	<property name="compiler" value="javac" />
	<property name="jvm" value="java" />
	<property name="documentor" value="javadoc" />
	<!-- project directories -->
	<property name="src.dir" location="src" />
	<property name="build.dir" location="build" />
	<property name="tomcat.dir" location="/usr/local/apache-tomcat-5.5.15" />

	<target name="init">
		<mkdir dir="${build.dir}" />
	</target>

	<target name="clean">
		<delete dir="${build.dir}" />
	</target>

	<target name="build" depends="init">
		<javac destdir="${build.dir}" executable="${compiler}" fork="true" listfiles="true">
			<compilerarg value="-Xlint:unchecked" />
			<src>
				<pathelement path="${src.dir}" />
			</src>
			<classpath>
				<pathelement path="${build.dir}" />
				<pathelement location="lib/jasperreports-2.0.2.jar" />
				<pathelement location="${tomcat.dir}/common/lib/postgresql-8.2-504.jdbc3.jar" />
				<pathelement location="lib/mail.jar" />
				<pathelement location="lib/activation.jar" />
				<pathelement location="lib/commons-cli-1.0.jar" />
				<pathelement location="lib/commons-io-1.3.2.jar" />
			</classpath>
		</javac>
	</target>

	<target name="jar" depends="build">
		<jar destfile="RunJasperReports.jar" basedir="${build.dir}" includes="**/*.class">
			<manifest>
				<attribute name="Main-Class" value="com.gtwm.jasperexecute.RunJasperReports" />
				<attribute name="Class-Path" value=". ./lib/jasperreports-2.0.2.jar ${tomcat.dir}/common/lib/postgresql-8.2-504.jdbc3.jar ./lib/mysql-connector-java-5.0.6-bin.jar ./lib/commons-collections-3.2.jar ./lib/commons-logging-1.1.jar ./lib/commons-beanutils.jar ./lib/commons-digester-1.8.jar ./lib/itext-2.0.3.jar ./lib/activation.jar ./lib/mail.jar ./lib/commons-cli-1.0.jar ./lib/jfreechart-1.0.5.jar ./lib/jcommon-1.0.9.jar ./lib/commons-io-1.3.2.jar" />
			</manifest>
		</jar>
	</target>

	<target name="run" depends="jar">
		<java jar="RunJasperReports.jar" fork="true" />
	</target>

</project>
