<script language=JavaScript>
  function updateGrouping(groupingValue) {
    var groupingInputElement = document.getElementById('reportgrouping');
    groupingInputElement.value = groupingValue;
    new fChange(groupingInputElement);
  }
</script>
#set($report = $sessionData.getReport())
<table cellspacing=0 border=0 cellpadding=0>
  <tr>
    <td>Name:</td>
    <td>
		#set($pane1_report_name="$report.getParentTable().getInternalTableName()$internalReportName")
      <input type="text" name="reportname" gtpb_update_report value="$report" pane1_report_name="$pane1_report_name" onkeyup="top.oBuffer.writeBuffer(this); parent.pane_1.fUpdateTitle('$pane1_report_name', this.value);" maxKeyCount="6" identifier="$internalReportName" gtpb_internalreportname="$internalReportName" onfocus="this.setAttribute('focused','true')" onblur="this.removeAttribute('focused')"/>
    </td>
  </tr>
  <tr>
    <td>Purpose:<br><span class="greytext">Purpose and any key users</span></td>
    <td>
	  <textarea name="reportdesc" cols="60" rows="4" gtpb_update_report onkeyup="top.oBuffer.writeBuffer(this);" maxKeyCount="15" gtpb_internalreportname="$internalReportName" onfocus="this.setAttribute('focused','true')" onblur="this.removeAttribute('focused')">$report.getReportDescription()</textarea>
    </td>
  </tr>
  <tr>
    #set($modules = $view.getLoggedInUser().getCompany().getModules())
    <td>
      Module:<br><span class='greytext'><i>Please choose a module to place this report in</i></span>
    </td>
    <td>
	      #set($reportModule = $report.getModule())
	      <select name="internalmodulename" id="internalmodulename" gtpb_update_report onchange="new fChange(this); parent.pane_1.document.location = 'AppController.servlet?return=gui/pane1';" identifier="$internalReportName">
		        <option value="">--Please choose a module--</option>
		        #foreach($module in $modules)
			          #if($module.equals($reportModule))
			            <option value="$module.getInternalModuleName()" selected>$module</option>
			          #else
			            <option value="$module.getInternalModuleName()">$module</option>
			          #end
		        #end
	      </select>
    </td>
  </tr>
  <tr>
    <td>Custom template:<br><span class="greytext"><i>Upload a custom printout or output template in HTML format (optional, will be available in addition to the standard record printout)</i></span></td>
    <td>
      <form class="fileUploader" method="POST" action="AppController.servlet">
        <input type="hidden" name="return" value="gui/reports_and_tables/pane3" />
        <input type="hidden" name="upload_custom_template" value="true" />
        <input type="file" name="templatename" class="submit-trigger" onChange="uploadFile(this);" />#if($report.getCustomTemplateName())<p>$report.getCustomTemplateName() #end
        <div class="upload_progress_container">
          <div class="upload_progress_bar"></div>
          <span class="upload_info" upload_speed="$view.getUploadSpeed()"></span>
        </div>
      </form>
      #set($company = $viewMethods.getCompanyForLoggedInUser())
      #set($internalCompanyName = $company.getInternalCompanyName())
      #set($existingTemplates = $viewTools.listFiles("WEB-INF/templates/uploads/$internalCompanyName/$internalReportName"))
      Existing templates are $existingTemplates<br>
      #foreach($template in $existingTemplates)
        Template <a href="uploads/$internalCompanyName/$internalReportName/$template.getName()" target="_blank">$template</a><br>
      #end
    </td>
  </tr>
  <tr>
    #set($reportStyle = $report.getReportStyle())
    <td>
      Style:<br><span class='greytext'><i>Please select a visual style for the report (only applicable in certain cases)</i></span>
    </td>
    <td>
        <select name="reportstyle" id="reportstyle" gtpb_update_report onchange="new fChange(this); parent.pane_1.document.location = 'AppController.servlet?return=gui/pane1';" identifier="$internalReportName">
            <option value="SPREADSHEET" #if($reportStyle == "SPREADSHEET") selected #end>Spreadsheet - standard output in rows</option>
            <option value="SECTIONED" #if($reportStyle == "SECTIONED") selected #end>Sectioned - rows split into sections, with headings</option>
        </select>
    </td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>
      <input type=button value="Delete Report" onclick="parent.pane_1.document.location='AppController.servlet?return=gui/pane1&remove_report=true&internalreportname=$internalReportName'">
    </td>
  </tr>
</table>