#set($table = $sessionData.getTable())
#set($internalTableName = $table.getInternalTableName())
#if($view.getWhetherExceptionOccurred())
  #parse("gui/error.vm")
#end
<table cellspacing=0 border=0 cellpadding=0 style="width:100%">
  <tr valign="top">
    <td class="table_details">
	<b>Name:</b><br>
      <input type="text" name="tablename" gtpb_update_table value="$table.getTableName()" onkeyup="top.oBuffer.writeBuffer(this); parent.pane_1.fUpdateTitle('$internalTableName$table.getDefaultReport().getInternalReportName()', this.value);" maxKeyCount="6" identifier="$internalTableName" gtpb_internaltablename="$internalTableName" onfocus="this.setAttribute('focused','true')" onblur="this.removeAttribute('focused')"/><p>
    <b>Purpose:</b><br><span class="greytext" style="font-size:8pt">Purpose of table and key stakeholders who value it</span><br>
	  <textarea name="tabledesc" cols="50" rows="4" gtpb_update_table onkeyup="top.oBuffer.writeBuffer(this);" maxKeyCount="6" gtpb_internaltablename="$internalTableName" onfocus="this.setAttribute('focused','true')" onblur="this.removeAttribute('focused')">$table.getTableDescription()</textarea><p>
      <input type="checkbox" name="lockable" gtpb_update_table #if($table.getRecordsLockable()) checked #end onchange="top.oBuffer.writeBuffer(this);" identifier="$internalTableName" gtpb_internaltablename="$internalTableName">
	  Records lockable<br>
	  <span class="greytext" style="font-size:8pt">Allow custom actions (such as 'print invoice') to lock records against future editing</span><p>
      <input type="checkbox" name="tableformpublic" gtpb_update_table #if($table.getTableFormPublic()) checked #end onchange="top.oBuffer.writeBuffer(this);" identifier="$internalTableName" gtpb_internaltablename="$internalTableName">
	  Public data entry<br>
	  <span class="greytext" style="font-size:8pt">Publish a <a href="Public.ab?show_form=true&c=$view.getLoggedInUser().getCompany().getInternalCompanyName()&t=$internalTableName" target="_blank">form</a> which the general public can use to enter data.<br>Send notifications of new items to:</span><br>
    <input name="tableemail" gtpb_update_table #if($table.getEmail()) value="$table.getEmail()" #end onkeyup="top.oBuffer.writeBuffer(this);" maxKeyCount="6" identifier="$internalTableName" gtpb_internaltablename="$internalTableName" onfocus="this.setAttribute('focused','true')" onblur="this.removeAttribute('focused')"/>
    <p>
      <!-- table deletion button -->
	<input type=button value="Delete Table" #if($view.loggedInUserAllowedTo('ADMINISTRATE')) onclick="top.location='AppController.servlet?return=gui/display_application&remove_table=true&internaltablename=$internalTableName'" #else disabled=true #end>
    </td>
	<td class="table_details" style="background-color:#f4f4f4">
      <form method="POST" action="AppController.servlet" target="pane_1">
    	<input type="hidden" name="return" value="gui/pane1">
    	<input type="hidden" name="add_report" value="true">
    	<input type="hidden" name="set_custom_string" value="true">
    	<input type="hidden" name="key" value="report_tabindex">
    	<input type="hidden" name="value" value="6">		
    	<input type="submit" value="Create new report"><br>
    	<input type="checkbox" checked name="populatereport" value="true"> Populate the report with fields from this table (recommended)
      </form>
      <p>
      #if($table.getReports().size() > 1)
        Existing reports:<p>
        <ul>
        #foreach($tableReport in $table.getReports())
      	  #if(!$tableReport.equals($table.getDefaultReport()))
    		<li>#if($tableReport.getModule())$tableReport.getModule() - #end $tableReport</li>
    	  #end
        #end
        </ul>
      #else
        Create a report to allow data entry into this table as well as data analysis and filtering
      #end
	</td>
  </tr>
</table>
#set($current_layout = $table.getFormStyle())
<div id="layout_selector" style="width:100%; background-color:#f4f4f4; padding: 1em;">
  <h2>Choose a layout for the data entry form</h2>
  <div id="single_column" class="select_layout #if($current_layout == 'SINGLE_COLUMN') selected_layout #end">
    <img src="resources/tabs/1_column.png"><br>one column
  </div>
  <div id="two_columns" class="select_layout #if($current_layout == 'TWO_COLUMNS') selected_layout #end">
    <img src="resources/tabs/2_columns.png"><br>sections in two columns
  </div>
  <div id="two_columns_within_section" class="select_layout #if($current_layout == 'TWO_COLUMNS_WITHIN_SECTION') selected_layout #end">
    <img src="resources/tabs/2_columns_sectioned.png"><br>two columns within a section
  </div>
  <br style="clear:both" />
</div>
<div id="tabs_selector" style="width:100%; background-color:#f4f4f4; padding: 1em;">
  <h2>Choose child tabs for the form</h2>
  <form method="post" action="AppController.servlet">
    <input type="hidden" name="add_form_table" value="true" />
    <input type="hidden" name="return" value="gui/tabs/pane3" />
    <select name-"tabtable" onchange="form.submit();">
      <option value="">--select a table to include--</option>
      #set($dependentTables = $view.getDirectlyDependentTables($table)) ## child tables
      #foreach($dependentTable in $dependentTables)
        <option value="$dependentTable.getInternalTableName()">$dependentTable</option>
      #end
    </select>
  </form>
  Existing tabs:
  <ul>
    #foreach($formTab in $table.getFormTabs())
      <li>$formTab</li>
    #end
  </ul>
</div>
