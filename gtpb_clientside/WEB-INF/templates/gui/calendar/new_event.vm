#set($sessionTable = $sessionData.getTable())
<request>
  <nextTemplate>gui/calendar/edit_event</nextTemplate>
  #parse('gui/customisations/wizard_result.vm') 
  #set($app_action_caption = "New event")
  #set($tables = [])
  #set($user = $view.getLoggedInUser())
  #set($operationalDashboardReports = $user.getOperationalDashboardReports())
  #foreach($report in $operationalDashboardReports)
	#set($table = $report.getParentTable())
	#if(!$tables.contains($table))
	  #set($temp = $tables.add($table))
	#end
  #end
  <htmlContent ><![CDATA[
    <form style="padding:5px">
	  <h1>Please select a type of event to add</h1>
      <table border="0" cellspacing="0" cellpadding="0" style="margin-top:40px; margin-left:40px">
	    #foreach($table in $tables)
		  #set($internalTableName = $table.getInternalTableName())
          <tr>
            <td>
	          <input type="radio" name="set_table" id="radio_$internalTableName" value="$internalTableName" #if($table.equals($sessionTable)) checked #end>
			</td>
			<td style="padding: 10px">
			  <label for="radio_$internalTableName"><b>$table</b></label>
			</td>
		  </tr>
	    #end
	  </table>
	  <input type="hidden" name="save_new_record" value="true">
	</form>
  ]]>
  </htmlContent>
  <caption>$app_action_caption</caption>
</request>