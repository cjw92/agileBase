<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Strict//EN">
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    #parse('gui/display_error.vm')
	#if($mobile_device)
	<meta name = "viewport" content = "width = device-width">
	<!-- <meta name="apple-mobile-web-app-capable" content="yes" /> -->
	<link rel="apple-touch-icon" href="resources/icons/apple-touch-icon.png"/>
	#end
	<title>$view.getApplicationName() version $view.getApplicationVersion() - $view.getLoggedInUser().getCompany()</title>
	<link href="resources/tree/tree.css" type="text/css" rel="stylesheet" />
	<link href="resources/module-colours.css" type="text/css" rel="stylesheet" />
	#if($mobile_device)
	  <link href="resources/mobile/mobile.css" type="text/css" rel="stylesheet" />
	#else
	  <link href="styles/jquery.cluetip.css" type="text/css" rel="stylesheet" />
	#end
	<script type="text/javascript" src="resources/jquery.js"></script>
	<script type="text/javascript" src="resources/tree/tree.js"></script>
	#if(!$mobile_device)
 	##<script src="resources/jquery.dimensions.js" type="text/javascript"></script> <!-- for cluetip, not necessary in newer versions -->
	<script src="resources/jquery.hoverIntent.js" type="text/javascript"></script> <!-- for cluetip, optional -->
	<script src="resources/jquery.cluetip.js" type="text/javascript"></script> 
	<script>
	$(document).ready(function() {
	  $(".report_tooltip").cluetip({
	    showTitle: false,
		ajaxCache: true,
		waitImage: false,
		width: 229,
		hoverIntent: {  
		  interval: 500
		}
	  });
	});
    </script>
	#end
</head>
    <body #if($mobile_device) onload="window.scrollTo(0,1)" #else onload="parent.pane_2.document.location='AppController.servlet?return=gui/reports_and_tables/report_data'"#end>
	<ol id="tree"> <!-- ordered list for sections -->      
	  #parse('gui/reports_and_tables/report_list.vm')
      ##TODO: add logout button if mobile device
	  #if($mobile_device)
		<li><h1><span>&nbsp;</span></h1>
			<ul>
					<div id="logout">
						<form method="get" action="AppController.servlet">
							<input type="hidden" name="return" value="gui/display_application">
							<input type="hidden" name="logout" value="true">
							<input type="submit" value="logout">
						</form>
					</div>
			</ul>
		</li>
	  #else
        #set($manageableTables = $view.getTablesAllowedTo("MANAGE_TABLE"))
	    ## #if(($manageableTables.size() > 0) || $view.loggedInUserAllowedTo('ADMINISTRATE'))
	    <li id="setup"><h1><span>Setup</span></h1>
  		  <ul>
		  #parse('gui/reports_and_tables/table_list.vm')
		  #parse('gui/administration/administration.vm')
		  </ul>
	    </li>
	    #end
	  ## #end
	</ol> ## end list of sections	  
	  #if($view.getException().getMessage())
		   <script language="javascript">
		      alert('$viewTools.escape($view.getException().getMessage())');
		   </script>
	  #end
  </body>
</html>