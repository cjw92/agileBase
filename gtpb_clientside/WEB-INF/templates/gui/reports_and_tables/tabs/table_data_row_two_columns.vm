#if($fieldCategory == "SEPARATOR")
  #if(!$field.equals($firstField))
    #if($formStyle == 'TWO_COLUMNS')
      </td></tr></table>
    #end
    </div> <!-- end of previous section block -->
  #end
  #if($firstSection)
    #if($formTabs.size() > 0)
      #parse("gui/reports_and_tables/tabs/form_tabber.vm")
    #end
    <div #if(($formStyle == "TWO_COLUMNS") && !$parentTable) class="two_cols" #end id="form_tabs_$sessionTable.getInternalTableName()_$sessionTable.getInternalTableName()"> <!-- start of sections container -->
    #set($firstSection = false)
  #end
  #if($formStyle == 'TWO_COLUMNS')
    <div class="block"> <!-- start of section block -->
    ## Workaround for https://bugzilla.mozilla.org/show_bug.cgi?id=549114
    <table style="width:100%"><tr><td style="column-break-inside: avoid;">
  #else
    <div class="block #if(!$parentTable) two_cols non_section #end">
  #end
  <h1>$field</h1>
  #set($sectionHasImage=false)
#else
  #if($field.equals($firstField))
    #if((!$hasSections) && ($formTabs.size() > 0))
      #parse("gui/reports_and_tables/tabs/form_tabber.vm")
      <div class="block #if(!$parentTable) two_cols non_section #end" id="form_tabs_$sessionTable.getInternalTableName()_$sessionTable.getInternalTableName()">
    #else
      <div class="block #if(!$parentTable) two_cols non_section #end">
    #end
  #end
  #set($fieldClass = $field.getClass().getSimpleName())
  ## inline-block workaround for https://bugzilla.mozilla.org/show_bug.cgi?id=549114
  <div title="$field.getFieldDescription()" class="row" #if(($field.getContentSize() > 50) || ($fieldValue.length() > 100)) style="display:inline-block; width:100%" #end>
    #if(!$fieldClass.equals("RelationFieldDefn") && ($fieldCategory != "FILE"))
      ## relation and file field names included in resources/input/relation.vm
      <span class="fieldname">$field</span>
    #end
    #parse('gui/resources/input/input.vm')
  </div>
#end
#if($field.equals($lastField))
  #if($formStyle == 'TWO_COLUMNS')
    </td></tr></table>
  #end
  </div> <!-- end of last block -->
  #if($hasSections)
    </div> <!-- end of two sections container -->
  #end
  #foreach($formTab in $formTabs)
    <div style="display:none" id="form_tabs_$sessionTable.getInternalTableName()_$formTab.getTable().getInternalTableName()">
    </div>
  #end
#end