## A combo component containing no javascript

#set($all_items = $field.getItems())
#if($all_items.size() > 0) ##if any items in the combo
<select name="$field.getInternalFieldName()">
#foreach($item in $all_items)
	<option value="$item">$item</option>
#end
</select>
<br>or enter a new item: 
#end ## end if more than 1 item in the combo
<input type=text name=$field.getInternalFieldName() id=$field.getInternalFieldName() value="" isComboComponent="true">	