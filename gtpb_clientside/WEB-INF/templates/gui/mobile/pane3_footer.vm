## Buttons to select different pane 3 functions

<style>
#mobile_footer {
  position: relative;
  height: 40px;
  width: 100%;
  background-image: url('resources/mobile/header_middle.png');
  border-top: 1px solid rgb(45, 54, 66);
  font-size: 16pt;
  font-weight: bold;
  color: white;
  text-shadow: rgba(0, 0, 0, .6) 0px -1px 0px;
  /* enfore trimming if the label is too long */
  white-space : nowrap;
  overflow : hidden;
  text-overflow: ellipsis;
}
</style>

#set($table = $viewMethods.getSessionData().getTable())
#if($viewMethods.loggedInUserAllowedTo("EDIT_TABLE_DATA",$table))	

<form method="post" action="AppController.servlet" name="footerform">
<input type="hidden" name="return" value="gui/reports_and_tables/pane3">
<input type="hidden" name="set_custom_string" value="1">
<input type="hidden" name="stringkey" value="mobile_pane3_selection">
<input type="hidden" name="customstringvalue" value="$mobile_pane3_selection">
<input type="hidden" name="gtpbaction" value="true">
	
#if($mobile_pane3_selection == "edit")
<div id=toolbarDiv>
<div class=buttonGroup>
	<STYLE>@import url("resources/button/button.css");</STYLE>
<button  title="Create a new record"  class="_gtpb" style="-webkit-appearance: square-button; height:80px"
  id="button_new" onclick="document.footerform.gtpbaction.name='save_new_record'; submit();" 
  onmouseout="this.blur()">
    <img src="resources/toolbar/new.png"><br>
    New
</button> 
<button  title="Create a copy of this record"  class="_gtpb" style="-webkit-appearance: square-button; height:80px"
  id="button_new" onclick="document.footerform.gtpbaction.name='clone_record'; submit();" 
  onmouseout="this.blur()">
    <img src="resources/toolbar/clone.png"><br>
    Clone
</button> 
<button  title="Remove this record"  class="_gtpb" style="-webkit-appearance: square-button; height:80px"
  id="button_new" onclick="document.footerform.gtpbaction.name='remove_record'; submit();" 
  onmouseout="this.blur()">
    <img src="resources/toolbar/delete.png"><br>
    Delete
</button>
</div>
</div>

<p>
#end
	
<button #if($mobile_pane3_selection == "view") disabled #end onclick="document.footerform.customstringvalue.value='view'; submit();">view data</button> 
<button #if($mobile_pane3_selection == "edit") disabled #end onclick="document.footerform.customstringvalue.value='edit'; submit();">edit data</button> 

</form>
	
#end
